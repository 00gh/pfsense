	/* parse the configuration and include all functions used below */
	require_once("config.inc");
	require_once("services.inc");
	require_once("functions.inc");
	require_once("filter.inc");

	/* make sure to wait until the boot scripts have finished */
	while (file_exists("{$g['varrun_path']}/booting")) {
		sleep(1);
	}
	$dynamicdnslck = lock('dynamicdns', LOCK_EX);
	
	if(count($config['dyndnses']['dyndns']) > 0)
		log_error("DynDns: One or more Dynamic DNS endpoints has changed its IP. Refreshing.");
	/* if the monitor interface is set to a gateway group we will update the IP */

	/* perform RFC 2136 DNS update */
	services_dnsupdate_process($interface);

	/* signal dyndns update */
	services_dyndns_configure($interface);

	filter_configure();

	unlock($dynamicdnslck);
?>
