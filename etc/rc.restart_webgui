#!/usr/local/bin/php -f

<?php

require("config.inc");
require("functions.inc");
require("shaper.inc");
require("captiveportal.inc");
require("rrd.inc");

echo "Restarting webConfigurator...";

mwexec("killall -INT lighttpd");

while (exec("ps ax | grep lighttpd | grep -v grep")) {
        echo '.';
        sleep(1);
}

system_webgui_start();

captiveportal_init_webgui();

enable_rrd_graphing();

echo " done.\n\n";

?>
